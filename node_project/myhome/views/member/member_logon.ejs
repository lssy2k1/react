<script>

$(document).ready(() =>{
  $("#btnLogon").click(() => {
    let userid = $("#userid").val();
    let password = $("#password").val();
  
  $.ajax({
    url : "/member/logon",
    data : {userid : userid, password : password},
    method : "post",
    dataType : "json"
  }).then((result) =>{
  if (result.result == "success"){
    location.href = "/board";
  }
}).catch((res, status, error) => {
    console.log(status);
  })
})
});

</script>